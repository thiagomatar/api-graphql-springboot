enum OrderStatus{
    PENDING, APPROVED, DENIED, DELIVERED
}

type Order{
    id: ID,
    customer: String,
    products: [Product],
    requestDate: String,
    status: OrderStatus
}


input OrderInput{
    customer: String,
    products: [ProductInput],
    requestDate: String
    status: OrderStatus
}



extend type Query {
    order(id:ID): Order
    orders: [Order]
}

extend type Mutation {
    saveOrder(order:OrderInput!): Order!
    updateOrderStatus(id: ID!, status: OrderStatus!): Order!
}